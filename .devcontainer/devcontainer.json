{
  "name": "Cambermast Work Hub",
  "dockerComposeFile": "docker-compose.yml",
  "service": "cambermast-work-hub",
  "workspaceFolder": "/workspaces/cambermast-work-hub",
  "postCreateCommand": "npm install",
  "postStartCommand": "bash /workspaces/cambermast-work-hub/.devcontainer/scripts/start-tailscale-serve.sh",
  "postAttachCommand": "sh -c 'if ! lsof -i :5105 -t >/dev/null; then npm run dev; else echo \"Dev server already running on port 5105\"; fi'",
  "forwardPorts": [5105],
  "remoteEnv": {
    "TAILSCALE_AUTHKEY": "${localEnv:TAILSCALE_AUTHKEY}",
    "TAILSCALE_HOSTNAME": "${localEnv:TAILSCALE_HOSTNAME}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "openai.chatgpt",
        "bradlc.vscode-tailwindcss",
        "github.vscode-github-actions"
      ]
    }
  }
}
